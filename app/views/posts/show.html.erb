<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<div class="form-actions">
  <%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-outline-primary' %>
  <%= link_to 'Back', posts_path, class: 'btn btn-outline-success' %>
</div>


<%= render "comments/comment_frame", commentable: @post %>
