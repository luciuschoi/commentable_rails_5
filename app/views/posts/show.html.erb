<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<div class="form-actions">
  <%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-outline-primary' %>
  <%= link_to 'Back', posts_path, class: 'btn btn-outline-success' %>
</div>

<div class="comment_frame">
  <h3>Comments <small id='commentable_<%= @post.id %>_comments_size'><%= @post.comments.size %></small></h3>
  <ul id="commentable_<%= @post.id %>_comments" class="comments">
    <% if @post.comments.any? %>
      <%= render @post.comments %>
    <% else %>
      <li>댓글이 없음.</li>
    <% end %>
  </ul>
  <div id="commentable_<%= @post.id %>_comment_form" class="comment_form">
    <%= render "comments/form", comment: @post.comments.build %>
  </div>
</div>
